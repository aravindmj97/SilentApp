<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iamaravind.silentapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="223dp"
        android:layout_height="69dp"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="161dp"
        android:layout_above="@+id/normal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="114dp" />

    <Button
        android:id="@+id/normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:text="Normal"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="343dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/normal"
        android:layout_alignBottom="@+id/normal"
        android:layout_centerHorizontal="true"
        android:text="Silent" />

    <Button
        android:id="@+id/vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/silent"
        android:layout_alignBottom="@+id/silent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:text="Vibrate" />
</RelativeLayout>
